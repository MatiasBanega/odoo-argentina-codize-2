<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="l10n_ar.report_invoice_document">
        <div name="comment" position="after">
            <div t-if="o.journal_id.afip_ws == 'wsbfe'">
                EL ADQUIRENTE ASUME EL COMPROMISO, EN CARÁCTER DE DECLARACION JURADA, DE NO EXPORTAR EL BIEN DURANTE EL PLAZO DE TRES 3 AÑOS CONTADOS A PARTIR DE SU ADQUISICION
            </div>
        </div>

        <div name="footer_left_column" position="inside">
                <div class="col-6 p-2" t-if="o.texto_modificado_qr">
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.texto_modificado_qr, 450, 450)" style="width:110px;height:110px"/>
                </div>
        </div>

